{
    "name": "reaction-role-discord-bot",
    "version": "1.0.0",
    "description": "Discord bot that gives / removes roles based on message reactions.",
    "license": "MIT",
    "type": "module",
    "main": "dist/main.js",
    "scripts": {
        "prepare": "husky init",
        "lint": "eslint './src/**/*.{ts}'",
        "lint-fix": "eslint './src/**/*.{ts}' --fix",
        "format": "prettier --write .",
        "clean": "rimraf ./dist",
        "compile": "tsc",
        "build": "npm run clean && npm run compile",
        "start": "node .",
        "dev": "npm run clean && tsc-watch --onSuccess \"npm run start\"",
        "prod": "npm run build && npm run start"
    },
    "lint-staged": {
        "*.{ts}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "discord.js": "^14.21.0"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "dotenv": "^17.2.1",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "tsc-watch": "^7.1.1",
        "typescript": "^5.8.3"
    }
}
